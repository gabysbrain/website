/[if gt IE 8]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}
    -#%title Tom Torsney-Weir
    %title 
      - if current_page.data.title 
        = current_page.data.title
        = " - "
      TomTorsneyWeir.com
  
    %link{:rel=>"alternate", :type=>"application/atom+xml", 
          :title=>"Tom Torsney-Weir's feed", :href=> "/feed.xml"}
    = stylesheet_link_tag 'site'
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'

    / google analytics
    = partial 'google_analytics'

  %body

    %div.row
      %header.sidebar
        %section.title-area
          -#= image_tag 'headshot.jpg'
          %h1.title= link_to 'Tom Torsney-Weir', '/'
          %div.hide-for-small
            %h2.position PhD student
            = partial 'address'

            %hr
          -#%section
            -# put the social links here!
          = partial 'site_nav'

          %div.hide-for-small
            %hr
            = partial 'social'

 

      %div{:id => "content", :role => "content"}= yield
 
 
    %footer.row
      %div.site-footer
        %hr
        %p &copy; Copyright Tom Torsney-Weir
        -#
          %p
          Built with
          = link_to 'Middleman', 'http://middlemanapp.com'
          and
          = link_to 'Foundation', 'http://foundation.zurb.com'

    = javascript_include_tag 'site'
    = yield_content :js

